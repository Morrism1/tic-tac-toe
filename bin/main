#!/usr/bin/env ruby

puts '1 | 2 | 3'
puts '---------'
puts '4 | 5 | 6'
puts '---------'
puts '7 | 8 | 9'

puts "\nPlayer 1 (X), insert your name:"
player_one = gets.chomp 

puts "\nPlayer 2 (O), insert your name:"
player_two = gets.chomp 

puts "\n#{player_1} make your move"
gets.chomp

game_on = false
# initial instructions for player
current_player = nil

while game_on == false
  # telling player 1 to play
  if player_one
    current_player = player_one.to_s
    gets.chomp

    puts 'Make your move'
    # check the move is valid

    # tell player 2 to play
  elsif player_two
    current_player = player_two.to_s
    gets.chomp

    puts 'Make your move'
  end

  # check for a Winner or A tie

  puts ' It was a tie'
  puts "#{player_one} Won"
  puts "#{player_two} Won"

end

puts "\nCongrats #{player_two} you won!"
